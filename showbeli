local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")
local BeliLabel = Instance.new("TextLabel")
BeliLabel.Size = UDim2.new(0, 200, 0, 50)
BeliLabel.Position = UDim2.new(0.5, 0, 0, 10) -- Ở giữa, cách trên 10px
BeliLabel.AnchorPoint = Vector2.new(0.5, 0)   -- Căn giữa theo trục X
BeliLabel.BackgroundTransparency = 0.3
BeliLabel.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
BeliLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
BeliLabel.TextScaled = true
BeliLabel.Text = "Beli: 0"
BeliLabel.Parent = ScreenGui
local function updateBeli()
	local beliValue = LocalPlayer:WaitForChild("Data"):WaitForChild("Beli").Value
	BeliLabel.Text = "Beli: " .. tostring(beliValue)
end
LocalPlayer:WaitForChild("Data"):WaitForChild("Beli").Changed:Connect(updateBeli)
updateBeli()
